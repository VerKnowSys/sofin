#!/bin/sh

LN_BIN="/bin/ln"
DATE_BIN="/bin/date"
SED_BIN="/usr/bin/sed"
CUT_BIN="/usr/bin/cut"
TR_BIN="/usr/bin/tr"
LS_BIN="/bin/ls"
CAT_BIN="/bin/cat"
RM_BIN="/bin/rm"
MKDIR_BIN="/bin/mkdir"
UNAME_BIN="/usr/bin/uname"
TOUCH_BIN="/usr/bin/touch"
TAR_BIN="/usr/bin/tar"
ID_BIN="/usr/bin/id"
GREP_BIN="/usr/bin/grep"
LDCONFIG_BIN="/sbin/ldconfig"
TAIL_BIN="/usr/bin/tail"
FETCH_BIN="/usr/bin/fetch"

if [ `$UNAME_BIN` = "Darwin" ]; then
FETCH_BIN="/usr/local/bin/wget"
fi

OPT_DIR="/Software/"
LOG="${OPT_DIR}INSTALL_LOG"
APPLICATIONS_NAME_LIST="definitions/applications"
DEFINITIONS_DIR="definitions/"
