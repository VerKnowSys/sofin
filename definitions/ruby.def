APP_FULL_NAME="Ruby YARV 2.0"
APP_SHA="0be863f1c39d7764c52cbb79ca06105743e27c42"
APP_NAME="ruby"
APP_VERSION="2.0.0-p353"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_CONFIGURE_ARGS="--with-opt-dir=${PREFIX} --disable-install-doc --disable-install-rdoc --enable-load-relative"
case "${SYSTEM_NAME}" in
    FreeBSD)
        export APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --with-gcc=${SOFTWARE_ROOT_DIR}Clang/exports/clang"
        ;;

    Darwin)
        export APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --with-gcc=/usr/bin/clang --enable-shared"
        ;;

    Linux)
        export APP_CONFIGURE_ARGS="${APP_CONFIGURE_ARGS} --with-gcc=${SOFTWARE_ROOT_DIR}Clang/exports/clang --enable-shared"

  ;;
esac
APP_REQUIREMENTS="zlib bzip2 libiconv libxml2 gmake libtool libgpg-error libgcrypt libxslt yaml libffi sqlite perl openssl readline"
APP_AFTER_INSTALL_CALLBACK="${PRINTF_BIN} 'gem: --no-ri --no-rdoc' > ${HOME}/.gemrc ; ${PREFIX}/bin/gem install bundler rack --force"
APP_EXPORTS="ruby gem irb ri rdoc erb rake bundle rackup"
APP_CURRENT_VERSION="$(${CURL_BIN} http://www.ruby-lang.org/en/downloads/ 2>/dev/null | ${AWK_BIN} '/pub\/ruby/ {gsub(/ *<[^>]+> */, ""); print $2; exit}')"
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
APP_CONFLICTS_WITH="Rubinius Jruby Ruby-legacy Ruby-minimal Passenger Ruby18 Ruby19"
