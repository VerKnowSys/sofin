APP_FULL_NAME="Ruby YARV 1.9"
APP_NAME="ruby"
APP_VERSION="1.9.3-p286"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_CONFIGURE_ARGS="--enable-pthread --disable-install-doc --disable-install-rdoc --with-opt-dir=${PREFIX}"
APP_REQUIREMENTS="zlib bzip2 libxml2 libiconv make libtool libgpg-error libgcrypt libxslt yaml libiconv libffi readline"
APP_COMPILER_ARGS="-pthread"
APP_LINKER_ARGS="-pthread -lyaml -lz -lssl -lcrypt"
APP_AFTER_INSTALL_CALLBACK="${PRINTF_BIN} 'gem: --no-ri --no-rdoc' > ${HOME}/.gemrc ; ${PREFIX}/bin/gem install bundler"
APP_EXPORTS="ruby gem irb ri rdoc erb rake"
