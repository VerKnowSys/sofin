APP_FULL_NAME="Rubinius Ruby VM"
APP_SHA="e3ad0c45c2fb58d56d47debab017fc06c010aca7"
APP_NAME="rubinius"
APP_VERSION="b999afb4c8b98d9eee382a05ce7e5adc8dff903d" # 2.0.rc1
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_AFTER_INSTALL_CALLBACK="${PRINTF_BIN} 'gem: --no-ri --no-rdoc' > ${HOME}/.gemrc ; ${PREFIX}/bin/gem install rack rake"
APP_REQUIREMENTS="zlib bzip2 libxml2 libiconv gmake libtool libgpg-error libgcrypt libxslt yaml sqlite perl ruby-legacy m4 bison"
APP_EXPORTS="ruby rbx gem irb ri rdoc erb rake bundle"
APP_MAKE_METHOD="rake install"
APP_INSTALL_METHOD="true"
APP_NO_CCACHE="YES"
case "${SYSTEM_NAME}" in
  Darwin)
    APP_CONFIGURE_ARGS="--enable-version=1.9 --enable-llvm --preserve-prefix"
    ;;
  *)
    APP_CONFIGURE_ARGS="--enable-version=1.9 --llvm-config=${SOFTWARE_ROOT_DIR}Clang/exports/llvm-config --enable-llvm --preserve-prefix"
    ;;
esac
APP_CONFLICTS_WITH="Ruby Jruby Ruby-legacy Ruby-minimal"

