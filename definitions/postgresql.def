APP_FULL_NAME="PostgreSQL 9"
APP_SHA="edadf238bcf51bd6e92dfe2f8afb3665510297a6"
APP_NAME="postgresql"
APP_VERSION="9.2.2"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_CONFIGURE_ARGS="--without-ldap --with-zlib --disable-debug --disable-nls --without-perl --without-python --without-libxml --with-libedit-preferred --with-openssl"
APP_REQUIREMENTS="make zlib libiconv"
APP_AFTER_INSTALL_CALLBACK="cd ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}/${APP_NAME}-${APP_VERSION}/contrib/pg_archivecleanup && make install"
APP_EXPORTS="postgres pg_ctl initdb pg_dump pg_dumpall pg_config psql createdb createuser dropdb pg_controldata pg_restore pg_resetxlog reindexdb vacuumdb"
APP_NO_CCACHE="YES"
APP_CURRENT_VERSION="$(${CURL_BIN} http://www.postgresql.org 2>/dev/null | ${AWK_BIN} '/.*&middot;/ {print $1}' | ${HEAD_BIN} -n 1 | ${AWK_BIN} '{sub(/\<b\>/,""); sub(/\<\/b\>/,""); print $1}')"
