DISABLE_ON="Darwin"
APP_FULL_NAME="GNU GPG2"
APP_SHA="7ddfefa37ee9da89a8aaa8f9059d251b4cd02562"
APP_NAME="gnupg"
APP_VERSION="2.0.20"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.bz2"
APP_REQUIREMENTS="bzip2 zlib libiconv gmake libgpg-error libgcrypt libassuan libksba pth curl"
APP_CONFIGURE_ARGS="--enable-symcryptrun --disable-nls --disable-doc --disable-ldap"
APP_EXPORTS="gpg-connect-agent gpg-agent gpg-connect-agent gpg-error gpg-error-config gpg2 gpgconf gpgkey2ssh gpgparsemail gpgsm gpgsm-gencert.sh gpgv2 symcryptrun watchgnupg hmac256"
case "${SYSTEM_NAME}" in
    Darwin|Linux)
        export FORCE_GNU_COMPILER="true"
        ;;
esac
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
