APP_FULL_NAME="Nginx Standalone"
APP_NAME="nginx"
APP_SHA="b8c193d841538c3c443d262a2ab815a9ce1faaf6"
APP_VERSION="1.2.8"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="libiconv zlib pcre"
if [ "${SYSTEM_NAME}" != "Darwin" ]; then
    export ADDITION=" -Wl,-rpath=${PREFIX}/lib,--enable-new-dtags"
fi
APP_CONFIGURE_ARGS="--with-http_ssl_module --with-http_gzip_static_module --user=nobody --group=nogroup --with-cc-opt='-I${PREFIX}/include' --with-ld-opt='-L${PREFIX}/lib${ADDITION}'"
APP_EXPORTS="nginx"
