APP_FULL_NAME="Nginx Standalone"
APP_NAME="nginx"
APP_SHA="65309abde9d683ece737da7a354c8fae24e15ecb"
APP_VERSION="1.2.7"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="libiconv zlib pcre"
PCRE_VERSION="8.12"
PCRE_NAME="pcre"
APP_AFTER_UNPACK_CALLBACK="${TAR_BIN} xf ${CACHE_DIR}cache/${PCRE_NAME}-${PCRE_VERSION}/${PCRE_NAME}-${PCRE_VERSION}*.tar.* && ${CP_BIN} -fR ${PCRE_NAME}-${PCRE_VERSION}/ ${CACHE_DIR}cache/${PCRE_NAME}-${PCRE_VERSION}" # NOTE: Nginx requires pcre source root to be available, but since Sofin v0.30.1, build dir is wiped after build, hence it's required to provide precached pcre source folder manually
APP_CONFIGURE_ARGS="--with-http_ssl_module --with-http_gzip_static_module --user=nobody --group=nogroup --with-pcre=${CACHE_DIR}cache/${PCRE_NAME}-${PCRE_VERSION}/${PCRE_NAME}-${PCRE_VERSION}"
APP_EXPORTS="nginx"
