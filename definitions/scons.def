APP_FULL_NAME="Scons"
APP_NAME="scons"
APP_SHA="69c4bddfcca498e25dcc29a462042907fc93b243"
APP_VERSION="2.1.0"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="python-legacy"
APP_CONFIGURE_SCRIPT="ignore"
APP_MAKE_METHOD="${PREFIX}/bin/python setup.py install --prefix=${PREFIX} --standalone-lib --no-version-script --no-install-man"
APP_INSTALL_METHOD="true"
case "${SYSTEM_NAME}" in
  Darwin)
    export APP_MAKE_METHOD="/usr/bin/python setup.py install --prefix=${PREFIX} --standalone-lib --no-version-script --no-install-man"
    ;;
esac
APP_EXPORTS="scons"