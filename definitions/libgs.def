APP_FULL_NAME="Ghostscript library"
APP_NAME="ghostscript"
APP_SHA="af93787ba966360abbe085b213ec563b5db5a8cc"
APP_VERSION="9.05"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_ARGS="--with-libiconv=native --enable-contrib --with-system-libtiff --enable-dynamic --disable-dbus --disable-compile-inits --without-jasper --with-drivers='' --with-ijs --with-libidn"
APP_REQUIREMENTS="zlib gmake pkgconf jbig2dec libidn libiconv tiff libpng jpeg freetype libxml2 fontconfig libpaper m4 bison perl autoconf automake libtool util-macros python-legacy libxslt xcb-proto libpthread-stubs xproto libXau libxcb xtrans xextproto libX11 libICE libSM kbproto libXt libXext"
APP_MAKE_METHOD="LD_LIBRARY_PATH=${HOME}/.cache/cache/${APP_NAME}-${APP_VERSION}/${APP_NAME}-${APP_VERSION} gmake ${MAKE_OPTS} so" # NOTE: LD_LIBRARY_PATH is ignored on OSX
APP_INSTALL_METHOD="LD_LIBRARY_PATH=${HOME}/.cache/cache/${APP_NAME}-${APP_VERSION}/${APP_NAME}-${APP_VERSION} gmake ${MAKE_OPTS} soinstall"
APP_ABSOLUTE_RPATH="true"
