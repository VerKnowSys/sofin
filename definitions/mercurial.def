APP_FULL_NAME="Mercurial"
APP_NAME="mercurial"
APP_SHA="6fa2f2510757e3e62efa9d8953f8b703b84075b2"
APP_VERSION="2.1.2"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="curl bzip2 zlib python"
APP_CONFIGURE_SCRIPT="ignore"
APP_MAKE_METHOD="${PREFIX}/bin/python3 setup.py install --prefix=${PREFIX}"
APP_INSTALL_METHOD="true"
APP_EXPORTS="hg"
case "${SYSTEM_NAME}" in
  Darwin)
    export APP_MAKE_METHOD="/usr/bin/python setup.py install --prefix=${PREFIX}"
    ;;
esac
