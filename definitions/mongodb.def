APP_FULL_NAME="MongoDB - NoSQL database"
APP_NAME="mongodb"
APP_SHA="c85c721cc61bbb1bc86cecc58c8eb29906335816"
APP_VERSION="2.2.3"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-src-r${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="libiconv python-legacy scons libexecinfo gmake nspr" # v8
APP_CONFIGURE_SCRIPT="ignore"
APP_MAKE_METHOD="true"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
  export APP_INSTALL_METHOD="scons ${MAKE_OPTS} --clang --cc='/usr/bin/clang -w' --cxx='/usr/bin/clang++ -w' --extrapath=${PREFIX} --64 --release --prefix=${PREFIX} install"
else
  export APP_INSTALL_METHOD="scons ${MAKE_OPTS} --clang --cc='${SOFTWARE_ROOT_DIR}Clang/exports/clang -w' --cxx='${SOFTWARE_ROOT_DIR}Clang/exports/clang++ -w' --extrapath=${PREFIX} --64 --release --prefix=${PREFIX} install"
fi
APP_EXPORTS="mongod mongostat"
