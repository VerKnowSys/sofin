APP_FULL_NAME="Mobile shell"
APP_NAME="mosh"
APP_SHA="b1dffe8562d7b2f4956699849fbe5d18bfd7749e"
APP_VERSION="1.2.4"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="pkgconf libiconv zlib protobuf bzip2 perl openssl ncurses"
if [ "${SYSTEM_NAME}" = "Darwin" ]; then
    export APP_CONFIGURE_ARGS="--enable-hardening"
else
    export APP_CONFIGURE_ARGS="--enable-hardening  OPENSSL_CFLAGS='-I${PREFIX}/include' OPENSSL_LIBS='-lz -L${PREFIX}/lib -lssl' CC='${CC}' CXX='${CXX}' CFLAGS='${CFLAGS}' LDFLAGS='${LDFLAGS}'"
fi
APP_EXPORTS="mosh-client mosh-server mosh"
