DISABLE_ON="Linux"
APP_FULL_NAME="Log rotating utility (but not only for logs)"
APP_SHA="a8347541afc3db5beb2d5b082e382e61add1e332"
APP_NAME="logrotate"
APP_VERSION="3.8.5"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_SCRIPT="ignore"
APP_REQUIREMENTS="libiconv gmake popt"
APP_MAKE_METHOD="gmake CFLAGS='${CFLAGS} -I${PREFIX}/include -D_GNU_SOURCE -Wall -DVERSION=\\\"${APP_VERSION}\\\"' POPT_DIR=${PREFIX}/lib LOADLIBES='-L${PREFIX}/lib -Wl,-rpath,${PREFIX}/lib -lpopt'"
APP_INSTALL_METHOD="
${CP_BIN} ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}/${APP_NAME}-${APP_VERSION}/logrotate ${PREFIX}/bin
${MKDIR_BIN} -p ${PREFIX}/share/man/man5
${MKDIR_BIN} -p ${PREFIX}/share/man/man8
${CP_BIN} ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}/${APP_NAME}-${APP_VERSION}/logrotate.conf.5 ${PREFIX}/share/man/man5/
${CP_BIN} ${CACHE_DIR}cache/${APP_NAME}-${APP_VERSION}/${APP_NAME}-${APP_VERSION}/logrotate.8 ${PREFIX}/share/man/man8/
"
APP_EXPORTS="logrotate"
