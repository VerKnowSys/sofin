APP_FULL_NAME="Git SCM"
APP_SHA="172c6ad5a55276213c5e40b83a4c270f6f931b3e"
APP_NAME="git"
APP_VERSION="1.7.10.3"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_ARGS="--without-tcltk --with-zlib --without-python --with-perl=${PREFIX}/bin/perl"
APP_REQUIREMENTS="make zlib libiconv expat perl"
case "${SYSTEM_NAME}" in
  Darwin)
    export APP_CONFIGURE_ARGS="--without-tcltk --with-zlib --without-python --with-perl=/usr/bin/perl"
    ;;
  Linux)
    export APP_CONFIGURE_ARGS="--without-tcltk --with-zlib --without-python --with-perl=/usr/bin/perl"
    export APP_REQUIREMENTS="${APP_REQUIREMENTS} gettext" # not my fault, blame git creators
    ;;
esac
FORCE_GNU_COMPILER="true"
APP_EXPORTS="git"