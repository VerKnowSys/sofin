APP_FULL_NAME="Git SCM"
APP_SHA="172c6ad5a55276213c5e40b83a4c270f6f931b3e"
APP_NAME="git"
APP_VERSION="1.7.10.3"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
_ORIGIN='\"\$$ORIGIN/../lib\"'
APP_CONFIGURE_ARGS="--without-tcltk --without-python --with-perl=${PREFIX}/bin/perl --with-iconv=${PREFIX}/lib --with-zlib=${PREFIX}/lib LDFLAGS=-Wl,-rpath=${_ORIGIN},-rpath-link=${_ORIGIN},--enable-new-dtags"
APP_REQUIREMENTS="gmake zlib libiconv expat perl bzip2 openssl curl"
case "${SYSTEM_NAME}" in
  Darwin)
    export APP_CONFIGURE_ARGS="--without-tcltk --with-zlib --without-python --with-perl=/usr/bin/perl"
    ;;
  Linux)
    export APP_REQUIREMENTS="${APP_REQUIREMENTS} gettext" # not my fault, blame git creators
    ;;
esac
APP_MAKE_METHOD="gmake -s ${MAKE_OPTS}"
APP_INSTALL_METHOD="gmake install -s ${MAKE_OPTS}"
FORCE_GNU_COMPILER="true"
APP_EXPORTS="git"
