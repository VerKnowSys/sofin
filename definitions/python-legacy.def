APP_FULL_NAME="Python 2"
APP_NAME="Python"
APP_POSTFIX="-legacy"
APP_VERSION="2.7.2"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_CONFIGURE_ARGS="--with-fpectl --without-pydebug --disable-ipv6"
