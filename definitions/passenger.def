APP_FULL_NAME="Passenger on Nginx"
APP_NAME="passenger"
APP_VERSION="3.0.11"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="zlib xml yaml ncurses iconv curl python2 scons ruby"
APP_CONFIGURE_SCRIPT="ignore"
APP_MAKE_METHOD="${SOFTWARE_DIR}Passenger-${APP_VERSION}/bin/gem install rake rack mustang linecache19 bundler"
APP_INSTALL_METHOD="${SOFTWARE_DIR}Passenger-${APP_VERSION}/bin/ruby bin/passenger-install-nginx-module --auto --auto-download --prefix=${SOFTWARE_DIR}Passenger-${APP_VERSION}"
