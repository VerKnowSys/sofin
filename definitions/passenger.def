APP_FULL_NAME="Passenger on Nginx"
APP_NAME="passenger"
APP_VERSION="3.0.8"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="zlib xml yaml ncurses iconv curl ruby"
APP_CONFIGURE_SCRIPT="no-conf"
APP_MAKE_METHOD="${SOFTWARE_DIR}/Passenger-${APP_VERSION}/bin/gem install rake rack && ./bin/passenger-install-nginx-module --auto --prefix=${SOFTWARE_DIR}/Passenger-${APP_VERSION} --auto-download"
