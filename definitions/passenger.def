APP_FULL_NAME="Passenger on Nginx"
APP_NAME="passenger"
APP_VERSION="3.0.11"
APP_HTTP_PATH="${MAIN_SOURCE_REPOSITORY}${APP_NAME}-${APP_VERSION}.tar.gz"
APP_REQUIREMENTS="zlib xml yaml ncurses iconv curl libffi libexecinfo python2 scons ruby19"
APP_CONFIGURE_SCRIPT="ignore"
APP_MAKE_METHOD="${PREFIX}/bin/gem19 install rake rack bundler"
APP_INSTALL_METHOD="${PREFIX}/bin/ruby19 bin/passenger-install-nginx-module --auto --auto-download --prefix=${PREFIX}"
APP_EXPORTS="passenger nginx bundle rack rake gem19 irb19 ruby19 ri19 rdoc19 erb19"