#!/bin/sh
# @author: Daniel (dmilith) Dettlaff (dmilith@verknowsys.com)

test -f src/sofin.conf.sh && . src/sofin.conf.sh
test -f /etc/profile_sofin && . /etc/profile_sofin

INSTALL="YES" bin/build
if [ "$PURE" != "" ]; then
    note "Pure mode"
    REPOSITORY= sofin setup
fi

# if [ "$(uname)" = "FreeBSD" ]; then
#     note "Installing Sofin base software"
#     sofin install base
# fi

if [ -d "/Users/sofin" ]; then
    note "Updating functions for sofin user"
    cat src/functions.sh > /Users/sofin/.functions.sh
fi

if [ -d "/Users/dmilith" ]; then
    note "Developer mode. Installing/ updating functions in home dir"
    cat src/functions.sh > /Users/dmilith/.functions.sh
fi

bin/clean
