#!/usr/bin/env sh
# @author: Daniel (dmilith) Dettlaff (dmilith at me dot com)

if [ "${1}" = "trace" -o \
     -n "${SOFIN_TRACE}" ]; then
    printf "Enabling trace mode\n"
    set -x
fi

if [ "${1}" = "verbose" -o \
     -n "${SOFIN_TRACE}" ]; then
    printf "Enabling verbose mode\n"
    set -v
fi

. share/sofin/funs/self.fun

load_requirements
create_dirs
install_sofin
