#!/usr/bin/env sh
# @author: Daniel (dmilith) Dettlaff (dmilith at me dot com)

if [ "${1}" = "trace" ] || [ -n "${SOFIN_TRACE}" ]; then
    printf "Enabling trace mode\n"
    set -x
fi

if [ "${1}" = "verbose" ] || [ -n "${SOFIN_TRACE}" ]; then
    printf "Enabling verbose mode\n"
    set -v
fi

. share/sofin/funs/self.fun

# NOTE: don't send reload signal after installing (returns non 0 exit code)
export NO_SIGNAL=1

load_requirements
create_sofin_dirs
install_sofin

if [ "Darwin" = "${SYSTEM_NAME}" ]; then
    printf "\n"
    permnote "NOTE: On Darwin, creating a new file: $(distn "/etc/sudoers.d/sofin") with a line below is recommended to handle the Quarantine feature."
    printf "    %b\n" "${USER} ALL=(ALL) NOPASSWD: /usr/bin/xattr -r -d com.apple.quarantine /Users/Shared/Software/*"
fi
