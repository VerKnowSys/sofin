#!/usr/bin/env zsh


# NOTE: Load core.fact for basic definitions:
SOFIN_ROOT="${SOFIN_ROOT:-/Software/Sofin}"
if [ -d "share/sofin/facts/" ] \
&& [ -f "share/sofin/facts/core.fact" ]; then
    . "share/sofin/facts/core.fact"
elif [ -d "${SOFIN_ROOT}/share/facts/" ] \
&&   [ -f "${SOFIN_ROOT}/share/facts/core.fact" ]; then
    . "${SOFIN_ROOT}/share/facts/core.fact"
fi


# loading functions have to know both FACTS and FUNS dirs:
load_facts () {
    for _fact in "${@}"; do
        . "${DEFAULT_FACTS_DIR}${_fact}"
    done
}


load_funs () {
    for _fun in "${@}"; do
        . "${DEFAULT_FUNS_DIR}${_fun}"
    done
}


load_sofin () {

    # determining facts:
    load_facts \
        paths.fact \
        security.fact \
        system.fact \
        terminal.fact \
        sofin.fact

    # loading functions:
    load_funs \
        core.fun \
        validations.fun \
        commons.fun \
        envs.fun \
        internals.fun \
        cleaners.fun \
        caches.fun \
        definitions.fun \
        datasets.fun \
        build.fun
}

# Load functions
load_sofin

# Invoke determines
determine_system_capabilites
determine_term_capabilites
